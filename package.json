{
  "name": "deuterium-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate using deuterium",
  "repository": "https://github.com/kbromma/deuterium-boilerplate.git",
  "author": "Kyle Bromma <kbromma@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev:server": "nodemon --ignore lib --exec babel-node src/_server",
    "dev:client": "webpack-dev-server --progress",
    "lint": "eslint src && flow",
    "test": "cross-env NODE_ENV=production node lib/_server",
    "build": "babel-node build.js",
    "start": "cross-env NODE_ENV=production pm2 start lib/_server/index.js && pm2 logs",
    "stop": "pm2 delete index",
    "list-pm2": "pm2 list"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
