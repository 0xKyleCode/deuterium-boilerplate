    "koa-helmet": "^4.0.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-sslify": "^4.0.3",
    "koa-static": "^5.0.0",
    "pm2": "^3.2.9",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-hot-loader": "^4.6.5",
    "seamless-immutable": "^7.1.4",
    "shelljs": "^0.8.3",
    "webpack": "^4.29.4",
